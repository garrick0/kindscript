{
  "name": "@induction/storybook",
  "version": "1.0.0",
  "description": "Development Storybook for Induction Design System",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./components": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles": "./src/styles/globals.css"
  },
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "npm run build:components && npm run build:storybook",
    "build:components": "vite build --config vite.components.config.ts",
    "build:storybook": "storybook build",
    "build:analyze": "vite build --config vite.bundle-analyze.config.ts",
    "sandbox:new": "node ./sandbox/scripts/create-component.js",
    "sandbox:promote": "node ./sandbox/scripts/promote-component.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test:stories": "node scripts/test-stories.js",
    "test:manual": "node scripts/test-stories.js --skip-start",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "typespec:compile": "tsp compile ./typespec/main.tsp",
    "typespec:generate": "npm run typespec:compile && tsx ../../scripts/typespec/generate-from-typespec.ts",
    "msw:init": "npm run typespec:generate",
    "chromatic": "chromatic --exit-zero-on-changes",
    "visual-test": "npm run build-storybook && chromatic --exit-zero-on-changes",
    "perf:analyze": "npm run build:analyze",
    "security:audit": "npm audit --audit-level=moderate",
    "docker:build": "docker build -t induction-storybook:latest -f Dockerfile ../..",
    "docker:run": "docker run -p 6006:80 induction-storybook:latest",
    "docker:compose": "docker-compose up -d",
    "deploy:staging": "npm run build && ./deployment/scripts/deploy-staging.sh",
    "deploy:production": "npm run build && ./deployment/scripts/deploy-production.sh",
    "health:check": "curl -f http://localhost:6006/health || exit 1",
    "monitor:start": "node ./src/monitoring/start.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-compose-refs": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@supabase/supabase-js": "^2.55.0",
    "@tanstack/react-query": "^5.85.5",
    "@tanstack/react-query-devtools": "^5.85.5",
    "chromatic": "^11.29.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.525.0",
    "next": "14.2.32",
    "next-auth": "5.0.0-beta.29",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.6.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@storybook/addon-links": "^9.1.3",
    "@storybook/react": "^9.1.3",
    "@storybook/react-vite": "^9.1.3",
    "@tanstack/query-core": "^5.85.5",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typespec/compiler": "^0.54.0",
    "@typespec/http": "^0.54.0",
    "@typespec/openapi3": "^0.54.0",
    "@typespec/rest": "^0.54.0",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/browser": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "msw": "^2.10.5",
    "msw-storybook-addon": "^2.0.5",
    "playwright": "^1.55.0",
    "prop-types": "^15.8.1",
    "storybook": "^9.1.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.0",
    "vite": "^7.1.3",
    "vite-plugin-dts": "^4.0.0",
    "vitest": "^3.2.4"
  },
  "packageManager": "npm@10.0.0",
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
