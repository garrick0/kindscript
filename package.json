{
  "name": "kindscript",
  "version": "2.0.0",
  "description": "Architectural enforcement for TypeScript",
  "main": "dist/types/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    },
    "./plugin": "./dist/apps/plugin/index.js",
    "./dist/*": null,
    "./src/*": null
  },
  "bin": {
    "ksc": "dist/apps/cli/main.js"
  },
  "files": [
    "dist/"
  ],
  "contributes": {
    "typescriptServerPlugins": [
      {
        "name": "kindscript",
        "enableForWorkspaceTypeScriptVersions": true
      }
    ]
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests --ext .ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "typescript",
    "architecture",
    "enforcement",
    "clean-architecture"
  ],
  "author": "garrick0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/garrick0/kindscript.git"
  },
  "homepage": "https://github.com/garrick0/kindscript#readme",
  "bugs": {
    "url": "https://github.com/garrick0/kindscript/issues"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": ">=5.3.0"
  }
}
